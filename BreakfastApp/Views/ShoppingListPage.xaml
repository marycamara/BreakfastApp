<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakfastApp.Views.ShoppingListPage"
             Title="Shopping List"
             BackgroundColor="Black">

    <StackLayout Padding="20" BackgroundColor="Black">
        <Label Text="Shopping List" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20,0,10" TextColor="White" />

        <!-- ListView to display shopping items -->
        <ListView ItemsSource="{Binding ShoppingItems}" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" TextColor="White" /> <!-- Corrected binding to Name property -->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Entry for adding new item -->
        <Entry Placeholder="Enter item name" Text="{Binding ItemName}" Margin="0,10,0,0" BackgroundColor="White" TextColor="Black" />

        <!-- Button to add new item -->
        <Button Text="Add Item" Command="{Binding AddItemCommand}" HorizontalOptions="Center" Margin="0,10,0,0" BackgroundColor="White" TextColor="Black" />
    </StackLayout>

</ContentPage>
